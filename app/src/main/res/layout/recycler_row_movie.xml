<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

  <TextView
      android:id="@+id/movie_name_rv_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:textColor="@android:color/black"
      android:textSize="24sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Movie_name" />

  <TextView
      android:id="@+id/movie_desc_rv_item"
      android:layout_width="285dp"
      android:layout_height="20dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/movie_name_rv_item"
      tools:text="Movie_description" />

  <TextView
      android:id="@+id/movie_score_rv_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:text="8.9/10"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/movie_score_image" />

  <ImageView
      android:id="@+id/movie_score_image"
      android:layout_width="50dp"
      android:layout_height="40dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toStartOf="@+id/movie_score_rv_item"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/star_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>